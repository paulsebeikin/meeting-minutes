<!DOCTYPE html>
<html>
    <head>
        <%- include("../partials/head") %>
    </head>
    
    <body>
        <header>
            <%- include("../partials/header") %>     
            <%- include("../partials/flash") %>                        
        </header>  
        <main class="container-fluid">

            <div class="row pl-2">
                <h2 class="display-6"><%= selectedMeeting.number %></h2>                
            </div>
            <div class="row p-2 justify-content-between">
                <small class="d-block"><%= new Date(selectedMeeting.date).toLocaleDateString() %></small>
                <a class="btn btn-sm btn-success" href="/meetings/<%= selectedMeeting.id %>/meetingitems/new">New action</a>                
            </div>

            <div class="row mt-3">                
                <div class="col-sm">                                        
                    <%- include("../partials/meetingItemTable", selectedMeeting) %>
                </div>
            </div>

        </main>
    </body>
</html>

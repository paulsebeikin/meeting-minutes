<div class='flash'>
  <% if (errors && errors.length > 0){ %>
    <div class="alert alert-danger">
      <ul>
        <% errors.forEach(error => { %>
          <li><%= error.message %></li>
        <% }) %>
      </ul>
    </div>          
  <% } else if (success && success.length > 0) {%>
    <div class="alert alert-success"><%= success %></div>
  <% } %>
</div>
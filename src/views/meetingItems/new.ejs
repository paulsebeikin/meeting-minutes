<!DOCTYPE html>
<html>
    <head>
        <%- include("../partials/head") %>
    </head>
    
    <body>
        <header>
            <%- include("../partials/header") %>     
            <%- include("../partials/flash") %>            
        </header>  
        <main class="container">            
            <form method="POST" action="/meetings/<%= meeting.id %>/meetingItems">
                <h4>New Meeting Item</h4>
                <div class="form-group">
                  <label for="meetingItem[item][name]">Name</label>
                  <input type="text" class="form-control" name="meetingItem[item][name]">                  
                </div>
                <div class="form-group">
                  <label for="meetingItem[statusId]">Status</label>
                  <select class="form-control" name="meetingItem[statusId]">                    
                    <% statuses.forEach(status => { %>
                      <option value="<%= status.id %>"><%= status.name %></option>  
                    <% }) %>
                  </select>
                </div>
                <div class="form-group">
                  <label for="meetingItem[responsiblePerson]">Responsible Person</label>             
                  <input type="text" class="form-control" name="meetingItem[responsiblePerson]">                       
                </div>
                <div class="form-group">
                    <label for="meetingItem[comment]">Comment</label>             
                    <textarea class="form-control" name="meetingItem[comment]"></textarea>                         
                  </div>
                <button type="submit" class="btn btn-success">Create</button>
              </form>
        </main>
    </body>
</html>

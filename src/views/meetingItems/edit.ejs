<!DOCTYPE html>
<html>
    <head>
        <%- include("../partials/head") %>
    </head>
    
    <body>
        <header>
            <%- include("../partials/header") %>     
            <%- include("../partials/flash") %>            
        </header>  
        <main class="container">            
            <form method="POST" action="/meetings/<%= meetingItem.meetingId %>/meetingItems/<%= meetingItem.id %>?_method=PUT">
                <h4>Update '<%= meetingItem.item.name %>'</h4>
                <div class="form-group">
                  <label for="item[name]">Name</label>
                  <input type="text" class="form-control" name="item[name]" value="<%= meetingItem.item.name %>">                  
                </div>
                <div class="form-group">
                  <label for="meetingItem[statusId]">Status</label>
                  <select class="form-control" name="meetingItem[statusId]">        
                      <option selected value="<%= meetingItem.status.id %>"><%= meetingItem.status.name %></option>            
                    <% statuses.forEach(status => { %>
                      <option value="<%= status.id %>"><%= status.name %></option>  
                    <% }) %>
                  </select>
                </div>
                <div class="form-group">
                  <label for="meetingItem[responsiblePerson]">Responsible Person</label>             
                  <input type="text" class="form-control" name="meetingItem[responsiblePerson]" value="<%= meetingItem.responsiblePerson %>">                       
                </div>
                <div class="form-group">
                    <label for="meetingItem[comment]">Comment</label>             
                    <textarea class="form-control" name="meetingItem[comment]"><%= meetingItem.comment %></textarea>                         
                  </div>
                <button type="submit" class="btn btn-success">Update</button>
              </form>
        </main>
    </body>
</html>
